@model IEnumerable<BenefitsCalculator.Models.HistGroupListDTO>

@{
    ViewData["Title"] = "All";
}

<h2 class="mt-3 mb-3">Computation History</h2>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                Consumer Name
            </th>
            <th>
                Created Date
            </th>
            <th>
                Basic Salary
            </th>
            <th>
                Guaranteed Issue
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ConsumerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BasicSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GuaranteedIssue)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <input type="button" class="btn btn-info btn-sm me-sm-2" value="Details" />
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <input type="button" class="btn btn-danger btn-sm me-sm-2" value="Delete" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
